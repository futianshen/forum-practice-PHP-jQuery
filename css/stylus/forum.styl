// general
html
  height 100%

body
  height 100%

nav
  position fixed
  text-align right
  a
    margin-top 5px

ul
  list-style-type none

form
  text-align: right
  label
    width 100%
    textarea
      width 100%

.navbar
  position fixed
  width 100%
  z-index 10

.nav-link
  text-align right

.forum
  padding-top: 100px

.info
  padding 1.5rem

.update
  form
    margin-left 8px
  &__post
    display flex
  &__comment
    display flex

.post
  margin-top 2rem
  display flex
  &__head
    display flex
    justify-content: space-between

.comment
  margin-top 30px
  &__read
    margin-bottom 30px
    &--header
      display flex
      justify-content: space-between
    
.page
  padding 30px
  ul
    margin 0 auto
    padding 0
    display flex
    justify-content center

#footer
  bottom 0px
  width 100%
  height 50px
  background-color #444
  &__copy
    line-height 50px
    text-align center